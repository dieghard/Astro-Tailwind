---
const {
  data: {id, title,slug,subtitle,description,content,poster}} = Astro.props;

---
<li class="rounded-lg overflow-hidden shadow-lg bg-zinc-800 text-white transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-110">
  <img
    src={poster}
    alt="curso astro"
    class="w-full h-64 object-cover"
  />
  <div class="p-6 flex flex-col gap-4">
    <h2 class="text-2xl font-bold">{title}</h2>
    <h3 class="text-xl font-semibold">
      {subtitle}
    </h3>
    <p class="text-base">
      {description}
    </p>
    <a href="#" class="px-4 py-2 mt-auto text-white bg-sky-500 border border-sky-500 rounded-lg transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-110" role="button" aria-label="Comprar">
      COMPRAR
    </a>
  </div>
</li>